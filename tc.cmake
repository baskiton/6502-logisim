set(CMAKE_SYSTEM_NAME bOS)
set(CMAKE_SYSTEM_VERSION 0.0.1)
set(CMAKE_SYSTEM_PROCESSOR w65c02s)

#set(CMAKE_LINKER vc)
set(CMAKE_OBJDUMP vobjdump)

set(CMAKE_C_COMPILER vc)
set(CMAKE_C_COMPILER_ID vbcc)
set(CMAKE_C_COMPILER_VERSION 0.9i)
set(CMAKE_C_SIZEOF_DATA_PTR 2)
set(CMAKE_C_COMPILER_ABI VOBJ)
set(CMAKE_C_BYTE_ORDER LITTLE_ENDIAN)
set(CMAKE_C_LIBRARY_ARCHITECTURE 6502)
set(CMAKE_C_COMPILER_ID_RUN TRUE)
set(CMAKE_C_ABI_COMPILED TRUE)
set(CMAKE_C_COMPILER_WORKS TRUE)

set(CMAKE_ASM_COMPILER_ID vasm)
set(CMAKE_ASM_COMPILER_VERSION 1.9a)
set(CMAKE_ASM_COMPILER_WORKS TRUE)

# adjust the default behavior of the FIND_XXX() commands:
# search programs in the host environment
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)

# search headers and libraries in the target environment
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)

set(CMAKE_ASM_FLAGS "+${CMAKE_SOURCE_DIR}/w65c02s.config")
set(CMAKE_C_FLAGS "+${CMAKE_SOURCE_DIR}/w65c02s.config")
